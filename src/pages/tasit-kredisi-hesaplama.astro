import KonutKredisi from '../components/calculators/TasitKredisi.jsx';
---

<MainLayout title="Taşıt Kredisi Hesaplama 2025 - Aylık Taksit Hesapla">
  <div class="max-w-5xl mx-auto py-12 px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-6 text-blue-700">
      Taşıt Kredisi Hesaplama
    </h1>
    <p class="text-center text-gray-600 text-lg mb-12 max-w-3xl mx-auto">
      Aşağıdaki hesaplama aracında seçiminize uygun olarak aylık taksit tutarı veya kredi tutarını, faiz oranını ve ay cinsinden vadeyi girerek hesapla butonuna basınız.
    </p>

    <KonutKredisi client:load />
  </div>
</MainLayout>