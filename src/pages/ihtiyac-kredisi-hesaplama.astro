---
// src/pages/ihtiyac-kredisi-hesaplama.astro
import MainLayout from '../layouts/MainLayout.astro';
import IhtiyacKredisi from '../components/calculators/IhtiyacKredisi.jsx';
---

<MainLayout title="İhtiyaç Kredisi Hesaplama 2025 - Aylık Taksit Hesapla">
  <div class="max-w-5xl mx-auto py-12 px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-6 text-blue-700">
      İhtiyaç Kredisi Hesaplama
    </h1>
    <p class="text-center text-gray-600 text-lg mb-12 max-w-3xl mx-auto">
      2025 güncel faiz oranlarıyla ihtiyaç kredisi taksit hesaplama aracı. 
      En uygun bankayı bulmak için kredi tutarı, vade ve faiz oranını girin.
    </p>

    <IhtiyacKredisi client:load />
  </div>
</MainLayout>